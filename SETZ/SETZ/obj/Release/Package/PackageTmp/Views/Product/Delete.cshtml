@model SETZ.Product
@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <div class="panel panel-danger" style="margin: 50px;">
        <div class="panel-heading">
            <h3>Удаление Товара</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-12" style="margin: 20px;">
                <h3 id="h3-bootstrap-heading">Вы уверены в удалении Товара?</h3>
            </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="col-md-10">
                        <div class="col-md-5 grid">
                            <div >
                                <img src="@Url.Content("~/Images/Product/")@Model.Image" data-imagezoom="true" class="img-responsive">
                            </div>
                        </div>
                        <div class="col-md-7 single-top-in">
                            <div class="span_2_of_a1 simpleCart_shelfItem">
                                <h3>@Model.Name</h3>
                                <p class="in-para">@Model.Articul</p>
                                <div class="price_single">
                                    <span class="reducedfrom item_price">$@Model.Price</span>
                                    <a href="#">click for offer</a>
                                    <div class="clearfix"></div>
                                </div>
                                <h4 class="quick">Quick Overview:</h4>
                                <p class="quick_desc">@Html.Raw(Model.About)</p>
                            </div>

                        </div>
                    </div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div style="float:right;">
                                    <input class="btn btn-lg btn-danger" type="submit" value="Удалить" id="register-submit">
                                    <a class="btn btn-lg btn-default" style="margin-left:40px;" href="@Url.Action("Detail", "Product", new { id = Model.ID})">Отменить</a>
                                </div>
                            </div>
                        </div>
                }

        </div>
    </div>
</div>