@model SETZ.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_custom_layout.cshtml";
    ViewBag.Title = "Регистрация";
}
<!--login-->
<div class="container">
    <div class="login">
        <div class="col-md-3">
                
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="col-md-6 login-do">
            <div class="login-mail">
                @Html.ValidationMessageFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { placeholder = "Полное имя" })
                <i class="glyphicon glyphicon-user"></i>
            </div>
            <div class="login-mail">
                @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Номер телефона" })
                <i class="glyphicon glyphicon-phone"></i>
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
            <div class="login-mail">
                @Html.TextBoxFor(model => model.ConfirmPhoneNumber, new { placeholder = "Подтверждение номера телефона" })
                <i class="glyphicon glyphicon-phone"></i>
                @Html.ValidationMessageFor(model => model.ConfirmPhoneNumber)
            </div>
            <div class="login-mail">
                @Html.TextBoxFor(model => model.Email, new { placeholder = "E-mail" })
                <i class="glyphicon glyphicon-envelope"></i>
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="login-mail">
                @Html.TextBoxFor(model => model.Password, new { type = "password", placeholder = "Пароль" })
                <i class="glyphicon glyphicon-lock"></i>
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="login-mail">
                @Html.TextBoxFor(model => model.ConfirmPassword, new { type = "password", placeholder = "Подтверждение пароля" })
                <i class="glyphicon glyphicon-lock"></i>
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
            <div class="login-mail " href="#">
                @Html.CheckBoxFor(model => model.TermsAndConditions)
                Я соглашаюсь с
                <a class="terms" href="#"> условиями использования &nbsp;</a>
                @Html.ValidationMessageFor(model => model.TermsAndConditions)
            </div>
            <div>
            </div>
            <label class="hvr-skew-backward" style="float: right;">
                <input type="submit" value="Зарегистрироваться">
            </label>

        </div>

            
        }
