@model SETZ.Models.OrderAddressModel
@{
    ViewBag.Title = "Подтверждение заказа";
    Layout = "~/Views/Shared/_custom_layout.cshtml";
}

<div class="container">
    <div class="login">
        <div class="col-md-3">

        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="col-md-6 login-do">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Phone, new { placeholder = "Номер телефона", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Phone)

                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Address, new {  placeholder = "Адрес доставки", rows = 3, @class="form-control"})
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Е-mail", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)

                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Details, new { placeholder = "Дополнительная информация", rows = 3, @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Details)
                </div>
                <label class="hvr-skew-backward" style="float: right;">
                    <input type="submit" value="Подтвердить заказ">
                </label>
            </div>

        }
