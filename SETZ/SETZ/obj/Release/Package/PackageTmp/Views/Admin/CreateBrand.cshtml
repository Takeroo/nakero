@model SETZ.Models.AdminModel

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Добавить бренд</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateBrand", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.TextBoxFor(model => model.brandModel.brand.Name, new { placeholder = "Название Бренда", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.brandModel.brand.Name)
            </div>
                            <div class="form-group">
                                <span class="btn btn-primary btn-file" onclick="openUpload('upload-file')">
                                    Browse @Html.TextBoxFor(model => model.brandModel.File, new { type = "file", style = "width: 150px; display:none;", @id = "upload-file" })
                                </span>
                                <span id="upload-file-span"></span>
                                @Html.ValidationMessageFor(model => model.brandModel.File)
                            </div>
                            <input style="float:right;" type="submit" class="btn btn-default" value="Добавить" id="register-submit">
        }
    </div>
</div>

